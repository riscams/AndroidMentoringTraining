<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.risca.androidmentoringtraining.DetailMahasiswa">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_blue_light"
        android:id="@+id/relativeLayout2"></RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/relativeLayout3"></RelativeLayout>

    <ImageView
        android:id="@+id/fotoprofil"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        app:srcCompat="@mipmap/minion" />

    <ImageView
        android:id="@+id/btn_message"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/btn_call"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/relativeLayout3"
        app:srcCompat="@mipmap/telepon" />

    <TextView
        android:id="@+id/namadisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fotoprofil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Minion"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/nimdisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namadisplay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="1301144104"
        android:textSize="18sp" />

</RelativeLayout>
